        {% trans with {'%clientAppName%': '<b>' ~ clientApp.name ~ '</b>'} into userLocale %} Name: %clientAppName% {% endtrans %}
        <br>
        {% trans with {'%clientAppSoftwareVersion%': '<b>' ~ clientApp.softwareVersion ~ '</b>'} into userLocale %} App version: %clientAppSoftwareVersion% {% endtrans %}
        <br>
        {% trans with {'%clientAppRegIp%': '<b>' ~ clientApp.regIp ~ '</b>'} into userLocale %} Registered from IP address: %clientAppRegIp% {% endtrans %}
    {% endapply %}
    {% apply paragraph %} {% trans into userLocale %} Manage your new client app in the SUPLA-Cloud. {% endtrans %} {% endapply %}
    {% apply linkButton(cloudUrl('smartphones')) %} {% trans into userLocale %} See in SUPLA-Cloud {% endtrans %} {% endapply %}
