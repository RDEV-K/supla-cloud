{% extends '@Supla/Email/en/template.html.twig' %}

{% block subject %}
    SUPLA - Account Activation
{% endblock %}

{% block preheader %}
    Please confirm your SUPLA account.
{% endblock %}

{% block body %}
    {% apply paragraph %} Welcome! {% endapply %}
    {% apply paragraph %} Thank you for registering an account with {{ cloudHost() }}. Please click the following link to complete activation of your account. {% endapply %}
    {% apply linkButton(confirmationUrl) %} Confirm My Account {% endapply %}
    {% apply paragraph %}
        <b>NOTICE!</b> If you have not used this email address with {{ cloudHost() }}, please do not click the link. {% endapply %}
{% endblock %}

{% block footer %}{% endblock %}
