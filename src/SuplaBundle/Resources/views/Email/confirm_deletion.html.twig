{% extends '@Supla/Email/template.html.twig' %}

{% block subject %}
    {% trans into userLocale %} SUPLA - Account Removal {% endtrans %}
{% endblock %}

{% block preheader %}
    {% trans into userLocale %} If you really want to delete the account, here are the instructions. {% endtrans %}
{% endblock %}

{% block body %}
    {% apply paragraph %} {% trans with {'%cloudHost%': cloudHost()} into userLocale %} We have been asked to delete your SUPLA Cloud account (%cloudHost%). {% endtrans %} {% endapply %}
    {% apply paragraph %}
        {% trans into userLocale %} Keep in mind that we will delete all your settings, configured devices, locations, schedules and all other features that you used in SUPLA along with your account. {% endtrans %}
    {% endapply %}
    {% apply paragraph %} {% trans into userLocale %} If you register yourself again in the future, some devices might need reconfiguration even if you use the same e-mail address. {% endtrans %} {% endapply %}
    {% apply paragraph %} {% trans with {'%cloudHost%': cloudHost()} into userLocale %} Click the following link to confirm removal of your account on %cloudHost%. {% endtrans %} {% endapply %}
    {% apply paragraph %} <b>{% trans into userLocale %}THIS CANNOT BE UNDONE!{% endtrans %}</b> {% endapply %}
    {% apply linkButton(svrUrl(confirmationUrl), 'danger') %} {% trans into userLocale %} Delete my account {% endtrans %} {% endapply %}
    {% apply paragraph %}
        <b>{% trans into userLocale %}NOTICE!{% endtrans %}</b>
        {% trans with {'%cloudHost%': cloudHost()} into userLocale %} If you do not want to delete your account on %cloudHost%, please do not click the link. {% endtrans %} {% endapply %}
{% endblock %}

{% block footer %}{% endblock %}
