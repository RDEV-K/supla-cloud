{% extends 'SuplaBundle::empty-layout.html.twig' %}
{% block body %}



    <nav class="navbar navbar-default navbar-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button"
                        class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand"
                        href="#">
                    {{ include('@Supla/supla-logo-svg.html.twig') }}
                    supla
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse"
                    id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li {% if app.request.get('_route') == '_homepage' %} class="active" {% endif %}>
                        <a href="{{ path('_homepage') }}">
                            <i class="hidden-sm hidden-xs pe-7s-rocket"></i>
                            {% trans %}Start Here{% endtrans %}
                        </a>
                    </li>
                    <li {% if app.request.get('_route') == '_iodev_list' or app.request.get('_route') == '_iodev_item' or app.request.get('_route') == '_iodev_channel_item_edit' %} class="active" {% endif %}>
                        <a href="{{ path('_iodev_list') }}">
                            <i class="hidden-sm hidden-xs pe-7s-plug"></i>
                            {% trans %}I/O Devices{% endtrans %}
                        </a>
                    </li>
                    <li {% if app.request.get('_route') == '_loc_list' %} class="active" {% endif %}>
                        <a href="{{ path('_loc_list') }}"><i class="hidden-sm hidden-xs pe-7s-home"></i>{% trans %}Locations{% endtrans %}
                        </a>
                    </li>
                    <li {% if app.request.get('_route') == '_aid_list' %} class="active" {% endif %}>
                        <a href="{{ path('_aid_list') }}">
                            <i class="hidden-sm hidden-xs pe-7s-key"></i>
                            {% trans %}Access Identifiers{% endtrans %}
                        </a>
                    </li>
                    <li {% if app.request.get('_route') starts with '_schedule' %} class="active" {% endif %}>
                        <a href="{{ path('_schedule_list') }}">
                            <i class="hidden-sm hidden-xs pe-7s-clock"></i>
                            {% trans %}Schedules{% endtrans %}
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right account-dropdown">
                    <li class="dropdown">
                        <a class="dropdown-toggle"
                                data-toggle="dropdown"><i class="hidden-sm hidden-xs pe-7s-user"></i>{% trans %}Account{% endtrans %}
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('_account_view') }}"
                                        class="my-account">
                                    <span class="username">{{ app.user.email }}</span>
                                    {% trans %}Go to your account{% endtrans %}
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li class="flags">
                                <a class="lng_switch {% if app.request.locale == 'en' %} active {% endif %}"
                                        data-lng="en"><img src={{ asset('assets/img/flags/en.svg') }}></a>
                                <a class="lng_switch {% if app.request.locale == 'pl' %} active {% endif %}"
                                        data-lng="pl"><img src={{ asset('assets/img/flags/pl.svg') }}></a>
                                <a class="lng_switch {% if app.request.locale == 'ru' %} active {% endif %}"
                                        data-lng="ru"><img src={{ asset('assets/img/flags/ru.svg') }}></a>
                                <a class="lng_switch {% if app.request.locale == 'de' %} active {% endif %}"
                                        data-lng="de"><img src={{ asset('assets/img/flags/de.svg') }}></a>
                            </li>
                            <li class="flags">
                                <a class="lng_switch {% if app.request.locale == 'it' %} active {% endif %}"
                                        data-lng="it"><img src={{ asset('assets/img/flags/it.svg') }}></a>
                                <a class="lng_switch {% if app.request.locale == 'pt' %} active {% endif %}"
                                        data-lng="pt"><img src={{ asset('assets/img/flags/pt.svg') }}></a>
                                <a class="lng_switch {% if app.request.locale == 'es' %} active {% endif %}"
                                        data-lng="es"><img src={{ asset('assets/img/flags/es.svg') }}></a>
                                <a class="lng_switch {% if app.request.locale == 'fr' %} active {% endif %}"
                                        data-lng="fr"><img src={{ asset('assets/img/flags/fr.svg') }}></a>
                            </li>
                            <li class="divider"></li>
                            <li class="bottom">
                                <div class="btn-group btn-group-justified">
                                    <a href="{{ path('_api_settings') }}"
                                            class="btn btn-default">{% trans %}RESTful API{% endtrans %}</a>
                                    <a class="btn btn-default"
                                            href="{{ path('_auth_logout') }}">{% trans %}Sign Out{% endtrans %}</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    {% block content %}{% endblock %}
{% endblock %}
{% block scripts %}
    <script src="{{ asset('assets/dist/login-page.js', 'webpack') }}"></script>
{% endblock %}
